<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_wheelView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:id="@+id/wheel_timer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/circle_shape">

        </View>

        <NumberPicker
            android:id="@+id/number_picker_sleep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:background="#00000000"
            android:padding="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn_sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".2"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/done_btn_sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".2"
                android:text="Done"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wheel_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/circle_shape">

        </View>

        <NumberPicker
            android:id="@+id/wheel_for_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:background="#00000000"
            android:padding="60dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_btn_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".2"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/done_btn_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight=".2"
                android:text="Done"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20dp" />

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>